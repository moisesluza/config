source ~/config/bash_mac/git-prompt.sh
source ~/config/bash_mac/colors.sh

# Colored ls (OS X only)
export GREP_OPTIONS='--color=auto'
export CLICOLOR=1;
export LSCOLORS=exfxcxdxbxegedabagacad;

# Prompt
export PS1="\[$GREEN\]\t\[$RED\]-\[$BLUE\]\u \[$YELLOW\]\[$YELLOW\]\W\[\033[m\]\[$RED\]\$(__git_ps1)\[$WHITE\]\$ ";

alias la="ls -a";
alias ll="ls -l";
alias grep='grep --color=auto';
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl";
